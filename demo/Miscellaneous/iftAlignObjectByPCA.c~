#include "ift.h"

int main(int argc, char *argv[]) 
{

  if (argc!=3)
    iftError("Usage: iftAlignFingerPatch <finger_patch.png> <aligned_finger_patch.png>","main");

  timer *t1=iftTic();
  
  iftImage *bin  = iftReadImageByExt(argv[1]);
  iftImage *rbin = iftAlignObject(bin);

  iftWriteImageByExt(rbin,argv[2]); 
  
  iftDestroyImage(&rbin);
  iftDestroyImage(&bin);
  
  timer *t2=iftToc(); 
  printf("%f ms\n",iftCompTime(t1,t2)); 
 
  return(0);
}

